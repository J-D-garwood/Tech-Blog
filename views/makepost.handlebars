<div id='div-content' class='container main-margin'>
  <div class='row justify-content-evenly'>
    <form
      id='form-recipe'
      class='mt-4'
      action='/api/posts'
      method='POST'
      enctype='multipart/form-data'
    >
      <div class='form-group'>
        <label for='title'>Title</label>
        <input
          class='form-input'
          type='textArea'
          name='title'
          placeholder=''
          required
        />
      </div>

      <div class='form-group'>
        <label for='content'>Content</label>
        <input
          class='form-input'
          type='textArea'
          name='content'
          placeholder=''
          required
        />
      </div>
        <input
        type='submit'
        name='submitInfo'
        value='Submit'
        class='btn btn-primary rounded-pill px-4 py-1'
      />
    </form>
  </div>
</div>
<script src='https://code.jquery.com/jquery-3.4.1.min.js'></script>
<script src='/js/addRecipe.js'></script>