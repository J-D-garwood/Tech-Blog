<div id='div-content' class='container main-margin'>
  <div class='row justify-content-evenly'>
      <div class='form-group'>
        <label for='title'>Title</label>
        <input
          type='textArea'
          name='title'
          placeholder=''
          required
          id='title_area'
          value="{{post.title}}"
        />
      </div>
      <div>
        <label for='content'>Content</label>
        <input
          type='textArea'
          name='content'
          id='content_area'
          value="{{post.contents}}"
        />
      </div>
      <button class="update" data-id="{{post.id}}">UPDATE</button>
  </div>
</div>
<script src='https://code.jquery.com/jquery-3.4.1.min.js'></script>
<script src='/js/updatepost.js'></script>