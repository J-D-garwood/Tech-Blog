{{#each posts as |post|}}
<div>
    <a
      href='/post/{{post.id}}'
    >
        <div>
                <div>
                    <div>
                        <h3>{{post.title}} {{post.user.username}}</h3>
                        <h6>Posted by {{post.user.username}} on {{post.dateCreated}}</h6>
                        <p>{{post.contents}}</p>
                    </div>
                </div>
            </div>
        </div>
    </a>
</div>
{{/each}}