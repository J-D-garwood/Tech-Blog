<div class="container-fluid" id="homepage">
    {{#each posts as |post|}}
    <div class="row">
        <a
        href='/post/{{post.id}}'
        >
        <div class="card" id="feed-posts">
            <div class="card-header">
                <div class="row">
                    <div class="col-12 col-sm-10 col-lg-8 my-auto text-center">
                        <h3>{{post.title}}</h3>
                    </div>
                    <div class="col-12 col-sm-2 col-lg-4">
                        Posted by {{post.user.username}} on {{ format_date post.dateCreated }}
                    </div>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">{{post.contents}}</p>
            </div>
        </div>
        </a>
    </div>
    {{/each}}
</div>

